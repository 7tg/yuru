<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_style"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/man_list_point_num_text"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_main_point"
                android:fontFamily="@font/lemonmilk"
                android:gravity="center_vertical|center_horizontal"
                android:text="Puan\n1000"
                android:textAllCaps="false"
                android:textColor="@color/colorIcons"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/main_list_image_view"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/marka_mavi" />

            <TextView
                android:id="@+id/man_list_left_num_text"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_main_button"
                android:fontFamily="@font/lemonmilk"
                android:gravity="center_vertical|center_horizontal"
                android:text="Kalan\n100000"
                android:textAllCaps="false"
                android:textColor="@color/colorIcons"
                android:textSize="22dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_campaign_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="%30-%40 Mavi İndirim Kampanyası"
            android:textSize="20dp" />

    </LinearLayout>

</FrameLayout>